<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:background="#e7ffd5"
    tools:context="com.example.adila.resepmasakan.DetailResep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:background="#ffec3d"
            android:textColor="#e15600"
            android:gravity="center"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/gambar2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/gambar1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan - bahan :"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/bahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adetail bahan"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara Membuat"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/carapembuatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="detail pembuatan"/>
    </LinearLayout>

</ScrollView>
